<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="/css/style.css">



    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


</head>

<body>

    <% layout('/layouts/layout') -%>


        <div class="row container-fluid">

            <div class="col-8 offset-2">
                <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                    <br>
                    <h1 style="text-align: center;">Create New Listing !</h1>
                    <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                        <input name="title" id="title" class="form-control" type="text"  required>
                        <div class="invalid-feedback"> Please Enter A Title</div>

                    </div>

                    <!-- Description Input -->
                    <div class="mb-3">
                        <label for="des" class="form-label">Description</label>
                        <textarea name="des" id="des" class="form-control " required></textarea>
                        <div class="invalid-feedback"> Please Enter A Short Discription</div>

                    </div>

                    <!-- Image URL Input -->
                    <div class="mb-3">
                        <label for="img" class="form-label">Upload Image</label>
                        <input name="img" id="img" class="form-control" type="file" required>
                                                

                    </div>

                    <div class="row">
                        <!-- Price Input -->
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="price" id="price" class="form-control" required type="text">
                            <div class="invalid-feedback"> Price Should Be Valid</div>

                        </div>

                        <!-- Location Input -->
                        <div class="mb-3 col-md-8">
                            <label for="location" class="form-label">Location</label>
                            <input name="location" id="location" class="form-control" required type="text">
                            <div class="invalid-feedback"> Country Name Should Be Valid</div>

                        </div>
                    </div>

                    <!-- Country Input -->
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input name="country" id="country" class="form-control"  required type="text">
                        <div class="invalid-feedback"> Country Should Be Valid</div>

                    </div>

                    <button type="submit" class="btn btn-new">Submit Your Data</button>
                    <br><br>


                </form>
            </div>


        </div>
</body>

</html>